<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title><%= title || "App MVC" %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .wrapper {
        flex: 1;
        display: flex;
      }
      .sidebar {
        width: 250px;
        background-color: #f8f9fa;
        padding-top: 1rem;
      }
      .sidebar .nav-link {
        color: #333;
        padding: 10px 15px;
        border-radius: 5px;
        margin: 5px;
      }
      .sidebar .nav-link.active,
      .sidebar .nav-link:hover {
        background-color: #0d6efd;
        color: #fff;
      }
      .content {
        flex: 1;
        padding: 20px;
      }
      /* Mobile: ẩn sidebar */
      @media (max-width: 991px) {
        .sidebar {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
      <div class="container-fluid">
        <!-- Nút mở sidebar mobile -->
        <button
          class="btn btn-outline-primary d-lg-none"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#mobileSidebar"
        >
          ☰
        </button>

        <a class="navbar-brand ms-2" href="/">📚 Quản lý thư viện</a>

        <div class="ms-auto">
          <div class="dropdown">
            <span
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              class="fw-bold"
            >
              <%= fullname %>
            </span>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <a class="dropdown-item" href="/auth/logout">Đăng xuất</a>
              </li>
              <li>
                <a class="dropdown-item" href="/auth/change-password">Đổi mật khẩu</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- Wrapper gồm Sidebar + Content -->
    <div class="wrapper">
      <!-- Sidebar PC -->
      <div class="sidebar d-none d-lg-block">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/">🏠 Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/accounts">👤 Accounts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reports/dashboard">📊 Reports</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/borrows/librarian">Borrow</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/fines"> Fine</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/authors"> Author</a>
          </li>
          
        </ul>
      </div>

      <!-- Offcanvas Sidebar cho Mobile -->
      <div
        class="offcanvas offcanvas-start"
        tabindex="-1"
        id="mobileSidebar"
      >
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">📚 Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/">🏠 Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/accounts">👤 Accounts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reports/dashboard">📊 Reports</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/borrows/librarian">Borrow</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/fines"> Fine</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/authors"> Author</a>
          </li>
          
        </ul>
        </div>
      </div>

      <!-- Nội dung chính -->
      <div class="content">
        <%- body %>
        <%- script || "" %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
