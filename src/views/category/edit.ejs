<div class="container mt-5">
    <h1 class="mb-4">Sửa danh mục</h1>
    <div class="card p-4">
        <form action="/categories/edit/<%= category.id %>" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Tên danh mục</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= category.name %>" required minlength="3" maxlength="100">
            </div>
            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
            <a href="/categories" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>