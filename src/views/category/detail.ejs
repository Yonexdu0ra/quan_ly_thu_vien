<div class="container mt-5">
  <h1 class="mb-4">Chi tiết danh mục</h1>

  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <h5><%= category.name %></h5>
    </div>
    <div class="card-body">
      <p><strong>ID:</strong> <%= category.id %></p>
      <p><strong>Tên danh mục:</strong> <%= category.name %></p>
      <p><strong>Ngày tạo:</strong> <%= category.createdAt.toLocaleString() %></p>
      <p><strong>Ngày cập nhật:</strong> <%= category.updatedAt.toLocaleString() %></p>
    </div>
    <div class="card-footer">
      <a href="/categories" class="btn btn-secondary">Quay lại</a>
    </div>
  </div>

  <!-- Danh sách sách trong danh mục -->
  <div class="card">
    <div class="card-header bg-success text-white">
      <h5>Sách trong danh mục</h5>
    </div>
    <div class="card-body">
      <% if (category.books && category.books.length > 0) { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Tiêu đề</th>
              <th>ISBN</th>
              <th>Năm XB</th>
              <th>Số lượng có sẵn</th>
              <th>Chi tiết</th>
            </tr>
          </thead>
          <tbody>
            <% category.books.forEach(function(book) { %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.isbn %></td>
                <td><%= book.published_year %></td>
                <td><%= book.quantity_available %></td>
                <td>
                  <a href="/books/<%= book.id %>" class="btn btn-sm btn-info">Xem</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">Danh mục này chưa có sách nào.</p>
      <% } %>
    </div>
  </div>
</div>
