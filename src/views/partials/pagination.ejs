<div class="d-flex justify-content-center gap-4 align-items-center mt-3">
  <ul class="pagination">
    <li class="page-item <%= page <= 1 ? "disabled" : "" %>">
      <a class="page-link" href="?page=<%= page - 1 %>&sort=<%= query.sort %>&search=<%= query.search %>" tabindex="-1" >Trang trước</a>
    </li>
    <!-- <li class="page-item"><a class="page-link" href="#"><%= page - 1%></a></li> -->
    <li class="page-item active" aria-current="page">
      <div class="page-link" href="#"><%= page %> / <%= totalPages %></div>
    </li>
    <!-- <li class="page-item"><a class="page-link" href="#"><%= page +1 %></a></li> -->
    <li class="page-item <%= page >= totalPages ? "disabled" : "" %>">
      <a class="page-link" href="?page=<%= page + 1 %>&sort=<%= query.sort %>&search=<%= query.search %>">Trang Sau</a>
    </li>
  </ul>
</div>

