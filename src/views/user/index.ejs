<div class="container mt-4">
  <h1 class="mb-4">Danh sách người dùng</h1>

  <form class="mb-3" method="GET" action="/users">
    <div class="input-group">
      <input
        type="text"
        name="search"
        class="form-control"
        placeholder="Tìm kiếm người dùng..."
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      />
      <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
    </div>
  </form>
  <% if (users && users.length > 0) { %>
  <table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Họ tên</th>
        <th>Email</th>
        <th>Địa chỉ</th>
        <th>Số điện thoại</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-info btn-sm"
            >Xem chi tiết</a
          >
          <a href="/users/edit/<%= user.id %>" class="btn btn-warning btn-sm"
            >Sửa</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <div class="alert alert-info">Không có người dùng nào.</div>
  <% } %>
  <div class="d-flex justify-content-center gap-4 align-items-center mt-3">
    <span class="btn btn-primary">trang trước</span>
    <span>1 / 2</span>
    <span class="btn btn-primary">trang sau</span>
  </div>
</div>
