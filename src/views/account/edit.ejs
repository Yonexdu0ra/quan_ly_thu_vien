<h1 class="mb-4">Sửa tài khoản #<%= account.id %></h1>
<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger mt-4">
        <%= error %>
    </div>
<% } %>
<form action="/accounts/edit/<%= account.id %>" method="POST">
    <h4>Thông tin tài khoản</h4>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" value="<%= account.username %>" required>
    </div>
    <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <select name="role" id="role" class="form-select" required>
            <option value="Admin" <%= account.role === "Admin" ? "selected" : "" %>>Admin</option>
            <option value="Librarian" <%= account.role === "Librarian" ? "selected" : "" %>>Librarian</option>
            <option value="Reader" <%= account.role === "Reader" ? "selected" : "" %>>Reader</option>
        </select>
    </div>

    <h4 class="mt-4">Thông tin người dùng</h4>
    <div class="mb-3">
        <label for="fullname" class="form-label">Họ tên</label>
        <input type="text" name="fullname" id="fullname" class="form-control" value="<%= account.user.fullname %>" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= account.user.email %>" required>
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Địa chỉ</label>
        <input type="text" name="address" id="address" class="form-control" value="<%= account.user.address %>" required>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Số điện thoại</label>
        <input type="text" name="phone" id="phone" class="form-control" value="<%= account.user.phone %>" required>
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <%- include("../partials/back") %>
</form>
