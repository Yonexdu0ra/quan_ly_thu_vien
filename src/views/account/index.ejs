<h1 class="mb-4">Danh sách tài khoản</h1>
<a href="/accounts/add" class="btn btn-primary mb-3">Thêm tài khoản</a>
<form class="mb-3" method="GET" action="/accounts">
  <div class="d-flex flex-row gap-2">
      <input
        type="text"
        name="search"
        class="form-control"
        placeholder="Tìm kiếm tài khoản..."
        value="<%= query.search %>"
      />
      <select class="form-select" name="sort" id="">
        <option value=""></option>
        <option value="DESC" <%= query.sort === 'DESC' ? 'selected' : '' %>>
         Tài khoản mới nhất
        </option>
        <option value="ASC" <%= query.sort === 'ASC' ? 'selected' : '' %>>
         Tài khoản cũ nhất
        </option>
        </select>
    </div>
    <button class="btn btn-primary my-2">Tìm kiếm</button>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        <% accounts.forEach(acc => { %>
            <tr>
                <td><%= acc.id %></td>
                <td><%= acc.username %></td>
                <td><%= acc.role %></td>
                <td><%= acc.user ? acc.user.fullname : "-" %></td>
                <td><%= acc.user ? acc.user.email : "-" %></td>
                <td>
                    <a href="/accounts/detail/<%= acc.id %>" class="btn btn-info btn-sm">Xem</a>
                    <a href="/accounts/edit/<%= acc.id %>" class="btn btn-warning btn-sm">Sửa</a>
                    <form action="/accounts/delete/<%= acc.id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Bạn có chắc muốn xóa?')">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<div class="d-flex justify-content-center gap-4 align-items-center mt-3">
    <a
      class="btn btn-primary"
      <%= page <= 1 ? "hidden" : "" %>
      href="?page=<%= page - 1 %>&sort=<%= query.sort %>&search=<%= query.search %>"
      >trang trước</a
    >
    <span><%= page %> / <%= totalPages %></span>
    <a
      class="btn btn-primary"
      <%= page >= totalPages ? "hidden" : "" %>
      href="?page=<%= page + 1 %>&sort=<%= query.sort %>&search=<%= query.search %>"
      >trang sau</a
    >
  </div> 