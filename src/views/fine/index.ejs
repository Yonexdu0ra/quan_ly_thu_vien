<h1 class="mb-3">Danh sách Phiếu Phạt</h1>
<!-- <a href="/fines/add" class="btn btn-primary mb-3">Thêm Phiếu Phạt</a> -->

<form action="">
  <input type="text" class="form-control" placeholder="Tìm kiếm phiếu phạt..." name="search" value="<%= typeof search !== 'undefined' ? search : '' %>"/>
  <button class="btn btn-outline-secondary mt-2" type="submit">Tìm kiếm</button>
</form>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Số tiền</th>
      <th>Trạng thái</th>
      <th>Ngày tạo</th>
      <th>Ngày người mượn</th>
      <th>Sách</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% fines.forEach(fine => { %>
    <tr>
      <td><%= fine.id %></td>
      <td><%= fine.amount %> ₫</td>
      <td><%= fine.isPaid ? "Đã trả" : "Chưa trả" %></td>
      <td><%= fine.createdAt.toLocaleDateString() %></td>
      <td><%= fine.borrow.borrower.fullname %></td>
      <td><%= fine.borrow.book.title %></td>
      <td>
        <% role %>
        <% if (role !== "Reader") { %>
        <a href="/fines/<%= fine.id %>" class="btn btn-sm btn-info">Chi tiết</a>
        <a href="/fines/edit/<%= fine.id %>" class="btn btn-sm btn-warning"
          >Cập nhật</a
        >
        <% } %>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<div class="d-flex justify-content-center gap-4 align-items-center mt-3">
    <span class="btn btn-primary">trang trước</span>
    <span>1 / 2</span>
    <span class="btn btn-primary">trang sau</span>
  </div>
