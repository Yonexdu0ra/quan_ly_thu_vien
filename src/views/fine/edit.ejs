<h1>Sửa Phiếu Phạt</h1>

  <form action="/fines/edit/<%= fine.id %>" method="POST">
    <div class="mb-3">
      <label for="amount" class="form-label">Số tiền</label>
      <input type="number" step="0.01" class="form-control" name="amount" value="<%= fine.amount %>" required>
    </div>

    <div class="mb-3">
      <label for="fullname" class="form-label">Người mượn</label>
      <input type="text" class="form-control" name="fullname" value="<%= fine.borrow.borrower.fullname %>" required disabled>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Sách đã mượn</label>
      <input type="text" class="form-control" name="title" value="<%= fine.borrow.book.title %>" required disabled>
    </div>

    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" name="isPaid" value="true" <%= fine.isPaid ? 'checked' : '' %>>
      <label class="form-check-label">Đã trả</label>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <%- include("../partials/back") %>
  </form>